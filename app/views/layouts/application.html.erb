<!DOCTYPE html>
<html>
<head>
  <title>Letspair</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= include_gon %>
</head>
<body>

<div class="wrapper">
  <div class="header">
    
    <% if !@show_logo %>
      <%= link_to root_path do %>
        <%= image_tag 'logo.png' %>
      <% end %>
    <% end %>
    
    <ul class="main-menu">
      <% if logged_in? %>
        <li><%= current_user.username %></li>
        <li><%= link_to 'all sessions', pairsessions_path %></li>
        <li><%= link_to 'profile', user_path(current_user.username) %></li>
        <li><%= link_to 'sign out', session_path(current_user.username), method: :delete %></li>
      <% else %>
        <li><%= link_to 'all sessions', pairsessions_path %></li>
        <li><%= link_to 'sign up', new_user_path %></li>
        <li><%= link_to 'sign in', new_session_path %></li>
      <% end %>
    </ul>
    
    <% if !@show_logo %>
      <div class="separator"></div>
    <% end %>

  </div>

  <div class="system-info">
    <% if flash.notice or flash.alert %>
      <div class="panel">
        <%= flash.notice %>
        <%= flash.alert %>
      </div>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>

  <div class="footer"></div>
  <div id='contact-form' style="display:none;"></div>
</div>

</body>
</html>
